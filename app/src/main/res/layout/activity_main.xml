<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udangtangtang.emotion_mapfile.view.MainActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/layout_coordinator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".view.MainActivity">

                <ImageButton
                    android:id="@+id/btn_plus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/add" />

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_userCity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="30sp" />

                            <TextView
                                android:id="@+id/txt_cityTemperature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="40sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="20dp"
                                    android:text="@string/angry"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/txt_angry"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="20dp"
                                    android:text="@string/happy"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/txt_happy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/menu_bottom_border"
                                android:paddingBottom="10dp"
                                android:text="@string/recent_emotion"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/recent_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/recent_comment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stretchColumns="1">

                            <TableRow
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/menu_bottom_border">

                                <TextView
                                    android:layout_column="1"
                                    android:paddingBottom="10dp"
                                    android:text="@string/comment_list"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/textView_menu2"
                                    android:paddingBottom="10dp"
                                    android:text="@string/expand"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </TableRow>
                        </TableLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/commentOne"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/commentTwo"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/commentThree"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/commentFour"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:stretchColumns="1">

                                <TableRow
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/menu_bottom_border">

                                    <TextView
                                        android:layout_column="1"
                                        android:paddingBottom="10dp"
                                        android:text="@string/menu3"
                                        android:textColor="@color/black"
                                        android:textSize="20sp" />

                                    <TextView
                                        android:id="@+id/textView_menu3Detail"
                                        android:paddingBottom="10dp"
                                        android:text="@string/expand"
                                        android:textColor="@color/black"
                                        android:textSize="14sp" />
                                </TableRow>
                            </TableLayout>

                            <TableLayout
                                android:id="@+id/tablelayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:stretchColumns="*">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp" />

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:padding="3dp"
                                        android:text="@string/menu3.1" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:padding="3dp"
                                        android:text="@string/menu3.2" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:padding="3dp"
                                        android:text="@string/menu3.3" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:padding="3dp"
                                        android:text="@string/menu3.4" />
                                </TableRow>

                                <TableRow
                                    android:layout_height="300dp"
                                    android:layout_marginBottom="5dp">

                                    <TextView
                                        android:id="@+id/txt_region1"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/chart_txtHeight"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:background="@drawable/round_border1"
                                        android:gravity="center"
                                        android:padding="3dp"
                                        android:text="지역1" />

                                    <TextView
                                        android:id="@+id/txt_angry1"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/chart_txtHeight"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:background="@drawable/round_border1"
                                        android:gravity="center"
                                        android:padding="3dp"
                                        android:text="명" />

                                    <TextView
                                        android:id="@+id/txt_happy1"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/chart_txtHeight"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:background="@drawable/round_border1"
                                        android:gravity="center"
                                        android:padding="3dp"
                                        android:text="명" />

                                    <TextView
                                        android:id="@+id/total1"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/chart_txtHeight"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:background="@drawable/round_border1"
                                        android:gravity="center"
                                        android:padding="3dp"
                                        android:text="명" />
                                </TableRow>

                                <TableRow android:layout_marginBottom="5dp">

                                    <TextView
                                        android:id="@+id/txt_region2"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/chart_txtHeight"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:gravity="center"
                                        android:padding="3dp"
                                        android:text="지역2" />

                                    <TextView
                                        android:id="@+id/txt_angry2"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/chart_txtHeight"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:gravity="center"
                                        android:padding="3dp"
                                        android:text="명" />

                                    <TextView
                                        android:id="@+id/txt_happy2"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/chart_txtHeight"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:gravity="center"
                                        android:padding="3dp"
                                        android:text="명" />

                                    <TextView
                                        android:id="@+id/total2"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/chart_txtHeight"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:gravity="center"
                                        android:padding="3dp"
                                        android:text="명" />
                                </TableRow>

                                <TableRow android:layout_marginBottom="5dp">

                                    <TextView
                                        android:id="@+id/txt_region3"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/chart_txtHeight"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:background="@drawable/round_border1"
                                        android:gravity="center"
                                        android:padding="3dp"
                                        android:text="지역3" />

                                    <TextView
                                        android:id="@+id/txt_angry3"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/chart_txtHeight"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:background="@drawable/round_border1"
                                        android:gravity="center"
                                        android:padding="3dp"
                                        android:text="명" />

                                    <TextView
                                        android:id="@+id/txt_happy3"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/chart_txtHeight"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:background="@drawable/round_border1"
                                        android:gravity="center"
                                        android:padding="3dp"
                                        android:text="명" />

                                    <TextView
                                        android:id="@+id/total3"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/chart_txtHeight"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:background="@drawable/round_border1"
                                        android:gravity="center"
                                        android:padding="3dp"
                                        android:text="명" />
                                </TableRow>

                                <TableRow android:layout_marginBottom="5dp">

                                    <TextView
                                        android:id="@+id/txt_region4"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/chart_txtHeight"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:gravity="center"
                                        android:padding="3dp"
                                        android:text="지역4" />

                                    <TextView
                                        android:id="@+id/txt_angry4"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/chart_txtHeight"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:gravity="center"
                                        android:padding="3dp"
                                        android:text="명" />

                                    <TextView
                                        android:id="@+id/txt_happy4"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/chart_txtHeight"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:gravity="center"
                                        android:padding="3dp"
                                        android:text="명" />

                                    <TextView
                                        android:id="@+id/total4"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/chart_txtHeight"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:gravity="center"
                                        android:padding="3dp"
                                        android:text="명" />
                                </TableRow>

                                <TableRow android:layout_marginBottom="5dp">

                                    <TextView
                                        android:id="@+id/txt_region5"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/chart_txtHeight"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:background="@drawable/round_border1"
                                        android:gravity="center"
                                        android:padding="3dp"
                                        android:text="지역5" />

                                    <TextView
                                        android:id="@+id/txt_angry5"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/chart_txtHeight"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:background="@drawable/round_border1"
                                        android:gravity="center"
                                        android:padding="3dp"
                                        android:text="명" />

                                    <TextView
                                        android:id="@+id/txt_happy5"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/chart_txtHeight"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:background="@drawable/round_border1"
                                        android:gravity="center"
                                        android:padding="3dp"
                                        android:text="명" />

                                    <TextView
                                        android:id="@+id/total5"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/chart_txtHeight"
                                        android:layout_marginLeft="@dimen/chart_marginLeft"
                                        android:layout_marginBottom="1dp"
                                        android:background="@drawable/round_border1"
                                        android:gravity="center"
                                        android:padding="3dp"
                                        android:text="명" />
                                </TableRow>
                            </TableLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <include layout="@layout/activity_drawer" />
</androidx.drawerlayout.widget.DrawerLayout>